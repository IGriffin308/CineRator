{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/userAuth.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "user_id": {
      "type": "integer"
    },
    "movie_id": {
      "type": "string",
      "limit": 10
    },
    "username": {
      "type": "string",
      "limit": 25,
      "default": null
    },
    "comment": {
      "type": "string",
      "limit": 1000,
      "default": null
    }
  },
  "additionalProperties": false,
  "required": [
    "user_id",
    "movie_id"
  ]
}